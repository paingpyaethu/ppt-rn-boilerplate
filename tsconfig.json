{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["react-native", "jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "moduleResolution": "bundler"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
